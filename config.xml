<?xml version='1.0' encoding='utf-8'?>
<widget id="com.univlr.info.m2" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>QRLab</name>
    <description>
    	Un jeu ubiquitaire adaptatif de type "serious game".
    </description>
    <author email="brice.jeanne@etudiant.univ-lr.fr" href="">
        Brice JEANNE &amp; Adrien Rouhaud
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>To scan barcodes</string>
    </edit-config>
    <preference name="phonegap-version" value="cli-7.1.0" />
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^7.1.4" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="phonegap-plugin-barcodescanner" spec="8.1.0" />
</widget>
